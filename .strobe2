int d=5;
int R=3; int G=5; int B=6;
void setup() {
  pinMode(R, OUTPUT);
  pinMode(G, OUTPUT);
  pinMode(B, OUTPUT);
}
void loop() {
  // This will make the RGB LED to cycle through each color
  for (int a=0; a<256; a++) { // White
    analogWrite(R,random(a));
    analogWrite(G,random(a));
    delay(d);
  }
  for (int b=255; b>=0; b--) { // Red
    analogWrite(R,random(b));
    analogWrite(B,random(b));
    delay(d);
  }
  delay(200);
  
  for (int a=0; a<256; a++) { // Yellow
    analogWrite(R,random(a));
    delay(d);
  }
  for (int b=255; b>=0; b--) { // Green
    analogWrite(G,random(b));
    delay(d);
  }
  delay(200);
  
  for (int a=0; a<256; a++) { // Cyan
    analogWrite(B,random(a));
    delay(d);
  }
  for (int b=255; b>=0; b--) { // Blue
    analogWrite(G,random(b));
    analogWrite(B,random(b));
    delay(d);
  }
  delay(200);
  
  for (int a=0; a<256; a++) { // Purple/Magenta
    analogWrite(R,random(a));
    analogWrite(G,random(a));
    analogWrite(B,random(a));
    delay(d);
  }
  for (int b=255; b>=0; b--) { // Red
    analogWrite(R,random(b));
    analogWrite(G,random(b));
    analogWrite(B,random(b));
    delay(d);
  }
  delay(200);
}
